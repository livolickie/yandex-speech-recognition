<Window x:Class="Google_Speech_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Google_Speech_API"
        mc:Ignorable="d"
        Title="Speech recognition" Height="350" Width="525">
    <Grid>
        <Button Content="Speak" HorizontalAlignment="Left" Height="41" Margin="29,19,0,0" VerticalAlignment="Top" Width="200" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown"/>
        <TextBox Name="textBox_1" HorizontalAlignment="Left" Height="231" Margin="10,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
        <Button Content="Stop" HorizontalAlignment="Left" Height="41" Margin="274,19,0,0" VerticalAlignment="Top" Width="200" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown_1"/>
    </Grid>
</Window>
